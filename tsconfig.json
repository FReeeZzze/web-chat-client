{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "paths": {
    "src*": "./src*",
    "routes": "./src/routes*",
    "components*": "./src/components*",
    "layouts*": "./src/layouts*",
    "constants*": "./src/constants*",
    "context*": "./src/context*",
    "hooks*": "./src/hooks*",
    "pages*": "./src/pages*",
    "store*": "./src/store*",
    "utils*": "./src/utils*",
    "scss*": "./src/scss*"
  }
}
